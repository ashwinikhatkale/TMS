@model Sports.Business.Repositories.Models.TeamModel
@{
    ViewBag.Title = "Add Team";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="register-container" style="width:100%">
        <h1 style="text-align:center">@ViewBag.Title</h1>
        <hr />
        @using (Html.BeginForm("Add", "Team", FormMethod.Post, new { area = "TeamCoach", @class = "form-horizontal" }))
        {

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.TeamId)
            <div class="row">
                <div class="col-lg-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Team Name", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8 text-left">
                            @Html.TextBoxFor(model => model.TeamName, new { @class = "form-control col-lg-10" })

                            @Html.ValidationMessageFor(model => model.TeamName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8 text-left">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control col-lg-10" })

                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-md-4">
                            <input id="submit" type="Submit" class="btn btn-primary" value="Submit">
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/add-team")
}