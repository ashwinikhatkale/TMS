
@{
    ViewBag.Title = "Sports System";
    Layout = null;
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            box-sizing: border-box;
        }

        header {
            width: 100%;
            height: 720px;
            background: linear-gradient(60deg, #168cfa, #f70586);
        }

        nav {
            width: 100%;
            height: 100px;
            color: white;
            display: flex;
        }

        .title {
            width: 50%;
            height: 100px;
        }

            .title h1 {
                line-height: 100px;
                padding-left: 50px;
                font-size: 35px;
            }

        .menu {
            width: 50%;
            height: 100px;
        }

            .menu ul {
                width: 100%;
                height: 100px;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }

                .menu ul li {
                    list-style: none;
                    font-size: 25px;
                }

                    .menu ul li a {
                        text-decoration: none;
                        color: white;
                    }

                        .menu ul li a i {
                            padding-right: 20px;
                        }

                    .menu ul li:hover {
                        background: linear-gradient(60deg, #f70586, #168cfa);
                        padding: 15px;
                        border-radius: 10px;
                    }

        .rightside {
            padding-bottom: 20px;
            padding-top: 0.5px;
            padding-right: 20px;
            padding-left: 50px;
        }
    </style>
</head>

<body>
    <header class="header">
        <nav>
            <div class="title">
                <h1>Sports System</h1>
            </div>
            <div class="menu">
                <ul>
                    <li>
                        <a href="@Url.Content("/Login/Index")"><i class="fa fa-user-circle" aria-hidden="true"></i> Login Portal</a>
                    </li>
                    
                </ul>
            </div>
        </nav>
        
    </header>
</body>
</html>